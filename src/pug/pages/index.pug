extends ../layout/main

block variables
  - var title = 'Webpack + Pug';
  - var description = 'Description for Webpack + Pug';
  - var pageClass = 'index-page';

block content
  section.section_pad-top_150
    .container.container_slider
      .slider
        +inside('наши проекты')
        +switch
      .slider
        .slide
          .slide__img
          +slide__desc('ССК “ОЛИМП”', 'Световое оформление форума “Шубы-2019”')
        .slide
          .slide__img.slide__img_right
          +slide__desc('ССК “ОЛИМП”', 'Световое оформление форума “Шубы-2019”')

  section.section_pad-top_150
    .container.container-catalog
      +inside('каталог продукции')
      .catalog-switch
        a.catalog-switch__link(href="http://localhost/robe") robe
        a.catalog-switch__link(href="http://localhost:8081/#") compulite
      .catalog
        .catalog__item
          .catalog__img
          .catalog__descr Статичные светодиодные приборы
        .catalog__item
          .catalog__img.catalog__img_2
          .catalog__descr Контроллеры
        .catalog__item
          .catalog__img.catalog__img_3
          .catalog__descr Аксессуары

  section.section_pad-top_150
    .container.container_renta
      +inside('аренда оборудования')
      .renta
        p.renta__descr Мы занимаемся прокатом светового и сценического оборудования ведущих мировых производителей, таких как Robe, SGM, StudioDue, ChainMaster, Milos, Universal Effects, ArtLighting, MobilTech, Lampo, Martin, Spotlight, Compulite, Eurolite и др.
        .renta__new-equipment
          .renta__new-equipment Новое оборудование, предоставляемое в аренду:
          +switch
  section.section_pad-top_150
    .container
      +inside('новости')
